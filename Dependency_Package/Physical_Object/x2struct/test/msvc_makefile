INC=-I ../

json.exe:
	cl -o $@ /EHsc example_json.cpp $(INC)
	$@
	@-rm *.exe *.obj

xml.exe:
	cl -o $@ /EHsc example_xml.cpp $(INC)
	$@
	@-rm *.exe *.obj

check.exe:
	cl -o $@ /EHsc check.cpp $(INC) -DWINDOWS
	./$@
	@-rm *.exe *.obj

nt.exe:
	cl -o $@ /EHsc check.cpp $(INC) -DWINDOWS -DXNT
	./$@
	@-rm *.exe *.obj

expand:
	cl /E expand.cpp -DXTOSTRUCT_MACRO_TEST

